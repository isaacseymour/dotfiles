[user]
	name = Isaac Seymour
	email = i.seymour@oxon.org
  signingkey = 71E55778F1E239EB

[diff]
	tool = vimdiff

[alias]
  st = status
  ci = commit -v
  co = checkout --ignore-other-worktrees
  di = diff
  amend = commit --amend
  aa = add --all
  fa = fetch --all
  b = branch
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  prune-local = !git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -d
  prune-local-force = !git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
  prune-all = !git remote prune origin && git prune-local

[push]
	default = simple
  autoSetupRemote = true

[color]
	ui = true

[help]
	autocorrect = 1

[core]
	excludesfile = ~/.gitignore_global
	pager = less -r

[branch]
  autosetuprebase = always

[pager]
  log = (type diff-highlight > /dev/null 2>&1 && diff-highlight | less -r) || less -r
  show = (type diff-highlight > /dev/null 2>&1 && diff-highlight | less -r) || less -r
  diff = (type diff-highlight > /dev/null 2>&1 && diff-highlight | less -r) || less -r

[gpg]
  program = /opt/homebrew/bin/gpg

[commit]
  gpgsign = true
[rerere]
	enabled = true
