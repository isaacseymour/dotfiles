# lazy
alias f="fg"
alias l="ls"
alias vi="vim"
alias v="vim"
alias :q="exit"
alias :Q="exit"

# misc
alias man="LC_ALL=C LANG=C man"
alias ll="ls -al"
alias ls="ls -G"

# bundle and ruby rails stuff
alias be="bundle exec"
alias bi="bundle install"
alias rs="clear; spring rspec"
alias fuckspring="ps aux | egrep '[s]pring' | awk '{ print \$2 }' | xargs kill"

# git alises
alias ga="git add"
alias gaa="git add . -A"
alias gc="git commit"
alias gco="git co"
alias gcob="git co -b"
alias gb="git branch"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git pull"
alias gp="git push -u"
alias gpf="gp -f"
alias gca="git commit -a"
alias grba="git rebase --abort"
alias grbc="git rebase --continue"
alias grb="git rebase"
alias grbi="git rebase -i"
gorigin() {
  gco $1 && g fetch && g reset --hard "origin/$1" && g prune-local
}
alias gdev="gorigin dev"
alias gmaster="gorigin master"

# dotfiles
alias srcz="source ~/.zshrc"

# diffocop
alias diffocop="git diff origin/dev --name-only --diff-filter=ACMRTUXB | grep '\.rb$' | tr '\n' ' ' | xargs rubocop"

# lol
alias yolo="sudo"

# neauxde
alias ni="npm install"
alias nt="npm test"
alias ns="npm start"
alias nsb="ns | bunyan"
