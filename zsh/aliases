# lazy
alias c="clear"
alias f="fg"
alias v="vim"
alias :q="exit"
alias :Q="exit"
alias gpg="gpg2"

# misc
alias man="LC_ALL=C LANG=C man"
alias ll="ls -al"
alias ls="ls -G"

# bundle and ruby rails stuff
alias be="bundle exec"
alias bi="bundle install"
alias rs="clear; be rspec"
alias fuckspring="ps aux | egrep '[s]pring' | awk '{ print \$2 }' | xargs kill"

# git alises
alias ga="git add"
alias gaa="git add . -A"
alias gc="git commit"
alias gco="git co"
alias gcob="git co -b"
alias gb="git branch"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git pull"
alias gp="git push -u"
alias gpf="gp --force-with-lease"
alias gca="git commit -a"
alias grba="git rebase --abort"
alias grbc="git rebase --continue"
alias grb="git rebase"
alias grbi="git rebase -i"
gorigin() {
  gco $1 && g fetch && g reset --hard "origin/$1" && g prune-local
}
alias gdev="gorigin dev"
alias gmaster="gorigin master"

# dotfiles
alias srcz="source ~/.zshrc"

# diffocop
alias diffocop="git diff origin/master --name-only --diff-filter=ACMRTUXB | grep '\.rb$' | tr '\n' ' ' | xargs bundle exec rubocop --force-exclusion"

# lol
alias yolo="sudo"

# neauxde
alias ni="npm install"
alias nt="npm test"
alias ns="npm start"
