fpath=(~/dotfiles/zsh/completion $fpath)

# get auto completes going
autoload -U compinit
compinit

# Glob-like autocomplete
setopt glob_complete
setopt no_case_glob

# zsh history
setopt append_history
setopt share_history
setopt hist_ignore_dups

source $HOME/dotfiles/zsh/aliases
source $HOME/dotfiles/zsh/exports
source $HOME/dotfiles/zsh/functions
source $HOME/dotfiles/zsh/agnoster-theme
source $HOME/dotfiles/zsh/secret

# El Capitan does weird things to $PATH, so we have to re-init rbenv here
if which rbenv > /dev/null; then eval "$(rbenv init - zsh)"; fi

HISTFILE=$HOME/.zhistory
HISTSIZE=20000
SAVEHIST=20000
setopt HIST_IGNORE_SPACE
HOSTNAME="`hostname`"

# But still use emacs-style zsh bindings
bindkey -e

# this allows Vim to use C-s as a mapping
stty -ixon

# better cding
# http://robots.thoughtbot.com/cding-to-frequently-used-directories-in-zsh
setopt auto_cd
cdpath=($HOME/gc $HOME/personal)

# probably a bit unsafe but yolo
export PATH="./bin:$PATH"

# nice diffing
export PATH="/usr/local/share/git-core/contrib/diff-highlight:$PATH"

if which brew >/dev/null; then
  source `brew --prefix`/etc/profile.d/z.sh
fi

# Base 16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/base16-flat.dark.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
